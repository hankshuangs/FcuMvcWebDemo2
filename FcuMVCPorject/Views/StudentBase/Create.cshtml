@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "StudentBase", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        學號
        <div class="col-sm-9">
            <input type="text" class="col-xs-10 col-sm-5" name="ID"/>
        </div>
    </div>
    <div class="form-group">
        姓名
        <div class="col-sm-9">
            <input type="text" class="col-xs-10 col-sm-5" name="NAME" />
        </div>
    </div>
    <div class="form-group">
        地址
        <div class="col-sm-9">
            <input type="text" class="col-xs-10 col-sm-5" name="ADDRESS" />
        </div>
    </div>
    <div class="form-group">
        電話
        <div class="col-sm-9">
            <input type="text" class="col-xs-10 col-sm-5" name="TEL" />
        </div>
    </div>
    <div class="form-group">
       電子郵件
        <div class="col-sm-9">
            <input type="text" class="col-xs-10 col-sm-5" name="EMAIL" />
        </div>
    </div>
    <div class="form-group">
        訊息
        <div class="col-sm-9">
            <input type="text" class="col-xs-10 col-sm-5" name="MESSAGE" />
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit" onclick="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                新增
            </button>
            &nbsp; &nbsp;
            <button class="btn" type="button" onclick="location.href='@Url.Action("Index", "StudentBase")'">
                <i class="ace-icon fa fa-reply icon-only"></i>
                返回
            </button>
        </div>
    </div>
}
